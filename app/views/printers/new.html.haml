%h1 List your shop!
=form_for @printer do |f|
  .field
    = f.label :shop_name
    = f.text_field :shop_name
  .field
    = f.label :city_id
    = f.collection_select :city_id, City.all, :id, :name
  .field
    = f.label :contact_name
    = f.text_field :contact_name
  .field
    = f.label :email
    = f.text_field :email
  .action
    = f.submit
